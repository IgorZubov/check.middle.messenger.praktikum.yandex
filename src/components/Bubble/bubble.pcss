.bubble {
    max-width: 40%;
    border-radius: 10px;
    padding: 10px;
    background-color: var(--light-900);
    margin-bottom: 10px;
    border-top-left-radius: 0;

    &--me {
        align-self: flex-end;
        border-top-left-radius: 10px;
        border-bottom-right-radius: 0;
        background-color: var(--blue-700);
    }
}
